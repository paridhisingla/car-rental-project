<!DOCTYPE html>
<html>
<head>
    <title>Available Cars - Elite Rentals</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #000;
            font-family: 'Playfair Display', serif;
            color: #fff;
        }
        .navbar {
            background: rgba(0, 0, 0, 0.8);
            padding: 1.5rem 0;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(10px);
        }
        .navbar-brand {
            color: #c9a959 !important;
            font-size: 1.8rem;
            font-weight: 400;
            letter-spacing: 2px;
        }
        .search-section {
            background: #111;
            padding: 2rem;
            margin-top: 80px;
            border-bottom: 1px solid #333;
        }
        .search-title {
            color: #c9a959;
            font-size: 2rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }
        .form-control {
            background: #000;
            border: 1px solid #333;
            color: #fff;
            padding: 12px;
            border-radius: 0;
        }
        .form-control:focus {
            background: #000;
            border-color: #c9a959;
            color: #fff;
            box-shadow: none;
        }
        .btn-search {
            background: #c9a959;
            border: none;
            color: #000;
            padding: 12px 30px;
            border-radius: 0;
            font-weight: 500;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        .btn-search:hover {
            background: #b38f4a;
            transform: translateY(-2px);
        }
        .cars-grid {
            padding: 2rem 0;
        }
        .car-card {
            background: #111;
            border: 1px solid #333;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
        }
        .car-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(201, 169, 89, 0.2);
        }
        .car-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .car-details {
            padding: 1.5rem;
        }
        .car-name {
            color: #c9a959;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }
        .car-brand {
            color: #fff;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }
        .car-features {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        .feature {
            color: #999;
            font-size: 0.9rem;
        }
        .car-price {
            color: #c9a959;
            font-size: 1.3rem;
            margin-bottom: 1rem;
        }
        .btn-rent {
            background: #c9a959;
            border: none;
            color: #000;
            padding: 10px 20px;
            border-radius: 0;
            font-weight: 500;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            width: 100%;
        }
        .btn-rent:hover {
            background: #b38f4a;
            transform: translateY(-2px);
        }
        .btn-edit, .btn-delete {
            background: transparent;
            border: 1px solid #c9a959;
            color: #c9a959;
            padding: 10px 20px;
            border-radius: 0;
            font-weight: 500;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            margin-top: 10px;
        }
        .btn-edit:hover, .btn-delete:hover {
            background: #c9a959;
            color: #000;
        }
        .filter-section {
            background: #111;
            padding: 1rem;
            margin-bottom: 2rem;
            border: 1px solid #333;
        }
        .filter-title {
            color: #c9a959;
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }
        .price-range {
            width: 100%;
            background: #333;
            height: 2px;
            margin: 1rem 0;
        }
        .price-range::-webkit-slider-thumb {
            background: #c9a959;
        }
        .category-badge {
            background: #111;
            border: 1px solid #333;
            color: #fff;
            padding: 0.5rem 1rem;
            margin: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .category-badge:hover, .category-badge.active {
            background: #c9a959;
            color: #000;
        }
        .search-box {
            background: rgba(0, 0, 0, 0.5);
            padding: 2rem;
            border: 1px solid #333;
            border-radius: 5px;
        }
        .search-input-group {
            position: relative;
        }
        .search-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #c9a959;
        }
        .search-input {
            padding-left: 40px;
        }
        .filter-group {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #333;
        }
        .filter-group:last-child {
            border-bottom: none;
        }
        .filter-subtitle {
            color: #c9a959;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }
        .price-slider-container {
            padding: 0 10px;
        }
        .price-range {
            width: 100%;
            background: #333;
            height: 2px;
            margin: 1rem 0;
            -webkit-appearance: none;
        }
        .price-range::-webkit-slider-thumb {
            -webkit-appearance: none;
            width: 20px;
            height: 20px;
            background: #c9a959;
            border-radius: 50%;
            cursor: pointer;
        }
        .price-range-values {
            display: flex;
            justify-content: space-between;
            color: #999;
            font-size: 0.9rem;
        }
        .category-filters {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }
        .category-badge {
            background: #000;
            border: 1px solid #333;
            color: #fff;
            padding: 0.5rem 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }
        .category-badge:hover, .category-badge.active {
            background: #c9a959;
            color: #000;
            border-color: #c9a959;
        }
        .transmission-filters, .fuel-filters {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
        .form-check-label {
            color: #999;
            cursor: pointer;
        }
        .form-check-input:checked + .form-check-label {
            color: #c9a959;
        }
        .btn-reset {
            background: transparent;
            border: 1px solid #c9a959;
            color: #c9a959;
            padding: 12px 30px;
            border-radius: 0;
            font-weight: 500;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        .btn-reset:hover {
            background: #c9a959;
            color: #000;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">ELITE RENTALS</a>
        </div>
    </nav>

    <div class="search-section">
        <div class="container">
            <h1 class="search-title">FIND YOUR DREAM CAR</h1>
            <div class="search-box">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="search-input-group">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" class="form-control search-input" id="searchInput" placeholder="Search by name or brand...">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="search-input-group">
                            <i class="fas fa-car search-icon"></i>
                            <select class="form-control search-input" id="categoryFilter">
                                <option value="">All Categories</option>
                                <option value="Luxury">Luxury</option>
                                <option value="Sports">Sports</option>
                                <option value="SUV">SUV</option>
                                <option value="Sedan">Sedan</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-search w-100" id="searchBtn">
                            <i class="fas fa-search me-2"></i>SEARCH
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container cars-grid">
        <div class="row">
            <div class="col-md-3">
                <div class="filter-section">
                    <h3 class="filter-title">FILTERS</h3>
                    
                    <div class="filter-group">
                        <h5 class="filter-subtitle">Price Range</h5>
                        <div class="price-slider-container">
                            <input type="range" class="price-range" id="priceRange" min="0" max="1000" step="50">
                            <div class="price-range-values">
                                <span>$<span id="minPrice">0</span></span>
                                <span>$<span id="maxPrice">1000</span></span>
                            </div>
                        </div>
                    </div>

                    <div class="filter-group">
                        <h5 class="filter-subtitle">Transmission</h5>
                        <div class="transmission-filters">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Automatic" id="automatic">
                                <label class="form-check-label" for="automatic">
                                    <i class="fas fa-cog me-2"></i>Automatic
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Manual" id="manual">
                                <label class="form-check-label" for="manual">
                                    <i class="fas fa-cog me-2"></i>Manual
                                </label>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-reset w-100 mt-4" id="resetFilters">
                        <i class="fas fa-redo me-2"></i>RESET FILTERS
                    </button>
                </div>
            </div>
            <div class="col-md-9">
                <div class="row">
                    {{#each cars}}
                    <div class="col-md-6">
                        <div class="car-card">
                            <img src="{{this.image}}" alt="{{this.name}}" class="car-image">
                            <div class="car-details">
                                <h3 class="car-name">{{this.name}}</h3>
                                <p class="car-brand">{{this.brand}}</p>
                                <div class="car-features">
                                    <span class="feature"><i class="fas fa-cog"></i> {{this.transmission}}</span>
                                    <span class="feature"><i class="fas fa-gas-pump"></i> {{this.fuelType}}</span>
                                    <span class="feature"><i class="fas fa-chair"></i> {{this.seats}} seats</span>
                                </div>
                                <p class="car-price">${{this.pricePerDay}} / day</p>
                                <a href="/cars/{{this.id}}" class="btn btn-rent">VIEW DETAILS</a>
                                <div class="d-flex gap-2">
                                    <a href="/cars/{{this.id}}/edit" class="btn btn-edit flex-grow-1">EDIT</a>
                                    <form action="/cars/{{this.id}}?_method=DELETE" method="POST" class="flex-grow-1">
                                        <button type="submit" class="btn btn-delete w-100">DELETE</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Price range slider functionality
        const priceRange = document.getElementById('priceRange');
        const minPriceDisplay = document.getElementById('minPrice');
        const maxPriceDisplay = document.getElementById('maxPrice');
        
        priceRange.addEventListener('input', function() {
            maxPriceDisplay.textContent = this.value;
            filterCars();
        });

        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const categoryFilter = document.getElementById('categoryFilter');
        const searchBtn = document.getElementById('searchBtn');
        
        searchBtn.addEventListener('click', filterCars);
        searchInput.addEventListener('keyup', function(e) {
            if (e.key === 'Enter') filterCars();
        });
        categoryFilter.addEventListener('change', filterCars);

        // Transmission filters
        const transmissionCheckboxes = document.querySelectorAll('.transmission-filters input');
        transmissionCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', filterCars);
        });

        // Reset filters
        const resetBtn = document.getElementById('resetFilters');
        resetBtn.addEventListener('click', function() {
            searchInput.value = '';
            categoryFilter.value = '';
            priceRange.value = 1000;
            maxPriceDisplay.textContent = '1000';
            transmissionCheckboxes.forEach(checkbox => checkbox.checked = false);
            filterCars();
        });

        // Filter cars function
        function filterCars() {
            const searchTerm = searchInput.value.toLowerCase();
            const category = categoryFilter.value;
            const maxPrice = priceRange.value;
            const selectedTransmissions = Array.from(transmissionCheckboxes)
                .filter(cb => cb.checked)
                .map(cb => cb.value);

            const carCards = document.querySelectorAll('.car-card');
            
            carCards.forEach(card => {
                const carName = card.querySelector('.car-name').textContent.toLowerCase();
                const carBrand = card.querySelector('.car-brand').textContent.toLowerCase();
                const carCategory = card.querySelector('.car-features').textContent;
                const carPrice = parseInt(card.querySelector('.car-price').textContent.replace(/[^0-9]/g, ''));
                const carTransmission = card.querySelector('.feature:nth-child(1)').textContent;

                const matchesSearch = carName.includes(searchTerm) || carBrand.includes(searchTerm);
                const matchesCategory = !category || carCategory.includes(category);
                const matchesPrice = !maxPrice || carPrice <= maxPrice;
                const matchesTransmission = selectedTransmissions.length === 0 || selectedTransmissions.some(t => carTransmission.includes(t));

                if (matchesSearch && matchesCategory && matchesPrice && matchesTransmission) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>
