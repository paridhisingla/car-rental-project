<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Car Rental | Home</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f4f4;
    }

    /* ðŸ”¶ Main Page Heading */
    .page-title {
      text-align: center;
      padding: 30px 10px 10px;
      font-size: 40px;
      font-weight: bold;
      color: #5e60ce;
      letter-spacing: 1px;
    }

    /* âœ… Clean Top Navbar without border */
    nav {
      width: 100%;
      {{!-- background-color: #fff; --}}
      padding: 12px 0;
      display: flex;
      justify-content: center;
      /* âœ… Removed border-bottom */
    }

    .nav-links a {
      color: #333;
      text-decoration: none;
      font-weight: bold;
      font-size: 16px;
      padding: 10px 20px;
      border-radius: 5px;
      background-color: rgba(0, 0, 0, 0.05);
      transition: background 0.3s ease;
    }

    .nav-links a:hover {
      background-color: rgba(0, 0, 0, 0.1);
    }

    .main-content {
      max-width: 600px;
      margin: 50px auto;
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 12px rgba(0,0,0,0.1);
    }

    h2 {
      text-align: center;
      margin-bottom: 25px;
      color: #333;
      font-size: 28px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    input, select {
      width: 100%;
      padding: 10px;
      margin-bottom: 18px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    button {
      width: 100%;
      padding: 12px;
      background-color: #5e60ce;
      color: white;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background-color: #3f41b5;
    }

    .image-preview {
      max-width: 200px;
      max-height: 200px;
      margin-top: 10px;
      display: none;
    }

    .file-input-container {
      position: relative;
      margin-bottom: 15px;
    }

    .file-input-label {
      display: inline-block;
      padding: 10px 15px;
      background-color: #f0f0f0;
      border: 1px solid #ddd;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .file-input-label:hover {
      background-color: #e0e0e0;
    }

    .file-input {
      display: none;
    }
  </style>
</head>
<body>

  <!-- ðŸ”¶ Page Title -->
  <div class="page-title">Car Rental Management System</div>

  <!-- âœ… Navbar (no border now) -->
  <nav>
    <div class="nav-links">
      <a href="/cars">Available Cars</a>
    </div>
  </nav>

  <!-- ðŸš— Add Car Form -->
  <div class="main-content">
    <h2>Add a New Car</h2>
    <form action="/cars" method="POST" enctype="multipart/form-data">
      <label for="id">Car ID</label>
      <input type="text" id="id" name="id" required>

      <label for="name">Car Name</label>
      <input type="text" id="name" name="name" required>

      <label for="brand">Brand</label>
      <input type="text" id="brand" name="brand" required>

      <label for="pricePerDay">Price Per Day</label>
      <input type="number" id="pricePerDay" name="pricePerDay" required>

      <label for="available">Available</label>
      <select id="available" name="available" required>
        <option value="true">Yes</option>
        <option value="false">No</option>
      </select>

      <div class="file-input-container">
        <label for="carImage" class="file-input-label">Choose Car Image</label>
        <input type="file" id="carImage" name="carImage" class="file-input" accept="image/*" onchange="previewImage(this)">
        <img id="imagePreview" class="image-preview" alt="Car Image Preview">
      </div>

      <button type="submit">Add Car</button>
    </form>
  </div>

  <script>
    function previewImage(input) {
      const preview = document.getElementById('imagePreview');
      if (input.files && input.files[0]) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
          preview.src = e.target.result;
          preview.style.display = 'block';
        }
        
        reader.readAsDataURL(input.files[0]);
      } else {
        preview.style.display = 'none';
      }
    }
  </script>

</body>
</html>
