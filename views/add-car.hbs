<!DOCTYPE html>
<html>
<head>
    <title>Add New Car - Elite Rentals</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #000;
            font-family: 'Playfair Display', serif;
            color: #fff;
            min-height: 100vh;
        }
        .navbar {
            background: #000;
            padding: 1.5rem 0;
            border-bottom: 1px solid #333;
        }
        .navbar-brand {
            color: #c9a959 !important;
            font-size: 1.8rem;
            font-weight: 400;
            letter-spacing: 2px;
        }
        .form-section {
            background: #111;
            padding: 40px;
            border: 1px solid #333;
            margin: 40px 0;
        }
        .form-title {
            color: #c9a959;
            font-size: 2rem;
            font-weight: 400;
            margin-bottom: 30px;
            letter-spacing: 1px;
        }
        .form-label {
            color: #c9a959;
            font-size: 1rem;
            font-weight: 400;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }
        .form-control, .form-select {
            background: #000;
            border: 1px solid #333;
            color: #fff;
            border-radius: 0;
            padding: 12px;
            font-size: 1rem;
        }
        .form-control:focus, .form-select:focus {
            background: #000;
            border-color: #c9a959;
            color: #fff;
            box-shadow: none;
        }
        .form-control::placeholder {
            color: #666;
        }
        .btn-primary {
            background: #c9a959;
            border: none;
            color: #000;
            padding: 12px 30px;
            border-radius: 0;
            font-weight: 500;
            letter-spacing: 1px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background: #b38f4a;
            color: #000;
            transform: translateY(-2px);
        }
        .btn-secondary {
            background: #333;
            border: none;
            color: #fff;
            padding: 12px 30px;
            border-radius: 0;
            font-weight: 500;
            letter-spacing: 1px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        .btn-secondary:hover {
            background: #444;
            color: #fff;
            transform: translateY(-2px);
        }
        .form-text {
            color: #666;
            font-size: 0.9rem;
        }
        .features-input {
            margin-bottom: 10px;
        }
        .add-feature-btn {
            background: #333;
            border: none;
            color: #fff;
            padding: 8px 15px;
            border-radius: 0;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }
        .add-feature-btn:hover {
            background: #444;
            color: #fff;
        }
        .feature-tag {
            display: inline-block;
            background: #000;
            border: 1px solid #333;
            color: #c9a959;
            padding: 5px 10px;
            margin: 5px;
            font-size: 0.9rem;
        }
        .feature-tag i {
            margin-left: 5px;
            cursor: pointer;
        }
        .feature-tag i:hover {
            color: #fff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                ELITE RENTALS
            </a>
        </div>
    </nav>

    <div class="container">
        <div class="form-section">
            <h2 class="form-title">ADD NEW VEHICLE</h2>
            <form action="/cars" method="POST">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label class="form-label">Vehicle Name</label>
                        <input type="text" class="form-control" name="name" required placeholder="e.g., Mercedes-Benz S-Class">
                    </div>
                    <div class="col-md-6 mb-4">
                        <label class="form-label">Brand</label>
                        <input type="text" class="form-control" name="brand" required placeholder="e.g., Mercedes-Benz">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label class="form-label">Category</label>
                        <select class="form-select" name="category" required>
                            <option value="">Select Category</option>
                            <option value="Sedan">Sedan</option>
                            <option value="SUV">SUV</option>
                            <option value="Sports Car">Sports Car</option>
                            <option value="Luxury">Luxury</option>
                            <option value="Electric">Electric</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label class="form-label">Year</label>
                        <input type="number" class="form-control" name="year" required min="2000" max="2024" placeholder="e.g., 2024">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label class="form-label">Transmission</label>
                        <select class="form-select" name="transmission" required>
                            <option value="">Select Transmission</option>
                            <option value="Automatic">Automatic</option>
                            <option value="Manual">Manual</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label class="form-label">Fuel Type</label>
                        <select class="form-select" name="fuelType" required>
                            <option value="">Select Fuel Type</option>
                            <option value="Petrol">Petrol</option>
                            <option value="Diesel">Diesel</option>
                            <option value="Electric">Electric</option>
                            <option value="Hybrid">Hybrid</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label class="form-label">Number of Seats</label>
                        <input type="number" class="form-control" name="seats" required min="2" max="8" placeholder="e.g., 5">
                    </div>
                    <div class="col-md-6 mb-4">
                        <label class="form-label">Price per Day ($)</label>
                        <input type="number" class="form-control" name="pricePerDay" required min="100" placeholder="e.g., 500">
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Features</label>
                    <div class="features-input">
                        <div class="input-group">
                            <input type="text" class="form-control" id="featureInput" placeholder="Add a feature (e.g., Air Conditioning)">
                            <button type="button" class="btn add-feature-btn" onclick="addFeature()">ADD</button>
                        </div>
                    </div>
                    <div id="featuresList" class="mt-3"></div>
                    <input type="hidden" name="features" id="featuresInput">
                </div>

                <div class="mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="available" id="available" checked>
                        <label class="form-label" for="available">Available for Rent</label>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-primary">ADD VEHICLE</button>
                    <a href="/cars" class="btn btn-secondary">CANCEL</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let features = [];

        function addFeature() {
            const input = document.getElementById('featureInput');
            const feature = input.value.trim();
            
            if (feature && !features.includes(feature)) {
                features.push(feature);
                updateFeaturesList();
                input.value = '';
            }
        }

        function removeFeature(feature) {
            features = features.filter(f => f !== feature);
            updateFeaturesList();
        }

        function updateFeaturesList() {
            const list = document.getElementById('featuresList');
            const input = document.getElementById('featuresInput');
            
            list.innerHTML = features.map(feature => `
                <span class="feature-tag">
                    ${feature}
                    <i class="fas fa-times" onclick="removeFeature('${feature}')"></i>
                </span>
            `).join('');
            
            input.value = JSON.stringify(features);
        }
    </script>
</body>
</html> 